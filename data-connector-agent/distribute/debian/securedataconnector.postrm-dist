set -e

FULLNAME=__FULLNAME__
LOCALSTATEDIR=__LOCALSTATEDIR__
SYSCONFDIR=__SYSCONFDIR__
USER=__USER__
GROUP=__GROUP__

PKG_NAME="google-secure-data-connector"

installinit_error() {
  exit $?
}

echo $PKG_NAME --- package name

if [ "${1}" = "purge" ]; then
  echo "You may want to consider deleting user:group ${USER}:${GROUP}"
  echo "if appropriate."
  echo "Please inspect ${LOCALSTATEDIR} and ${SYSCONFDIR} for trailing"
  echo "artifacts."

  update-rc.d -f ${FULLNAME} remove

  sleep 1
fi
