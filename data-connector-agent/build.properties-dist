# Properties
version=1.0
projects.dir=..

# Compile Properties 
COMPILE_DEBUG_FLAG=true
COMPILE_DEBUG_LEVEL=source,lines,vars
build=build
bin=bin
deb=deb
src=src/java
classes=${build}/classes

# Install Properties
install.prefix=__PREFIX__
install.etc.prefix=__ETCPREFIX__
install.var.prefix=__VARPREFIX__
install.apache.conf=${install.etc.prefix}/apache
install.lib.prefix=${install.prefix}/lib
install.bin.prefix=${install.prefix}/bin
install.ssh.conf.dir=${install.etc.prefix}/openssh
install.ssh.user.dir=${install.etc.prefix}/woodstock-user/.ssh
install.user=__USER__
install.group=__GROUP__
install.woodstock.user=woodstock
agent.jarfile=${build}/agent.jar
agent-src.jarfile=${build}/agent-src.jar
protocol.jarfile=${build}/protocol.jar
protocol-src.jarfile=${build}/protocol-src.jar
