<installation version="1.0">
  <info>
    <appname>Google Secure Data Connector</appname>
    <appversion>__VERSION__ - Release __RELEASE__</appversion>
    <url>http://code.google.com/p/google-secure-data-connector</url>
    <javaversion>1.5</javaversion>
  </info>

  <guiprefs width="640" height="480" resizable="yes"/>
  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="chn"/>
    <langpack iso3="deu"/>
    <langpack iso3="fra"/>
    <langpack iso3="rus"/>
    <langpack iso3="spa"/>
  </locale>

  <resources>
    <res id="LicencePanel.licence" src="COPYING"/>
    <res id="InfoPanel.info" src="README"/>
  </resources>

  <!-- 
     The panels section.
     We indicate here which panels we want to use. The order will be respected.
    -->
  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="InfoPanel"/>
    <panel classname="LicencePanel"/>
    <panel classname="TargetPanel"/>
    <panel classname="PacksPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="FinishPanel"/>
  </panels>

  <!-- 
     The packs section.
     We specify here our packs.
    -->
  <packs>
    <pack name="Base" required="yes">
      <description>The base files</description>
      <file src="COPYING" targetdir="$INSTALL_PATH"/>
      <file src="README" targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
</installation>
